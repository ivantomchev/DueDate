@model Project.Web.Areas.Administration.ViewModels.Activities.ActivityInputModel
@{
    ViewBag.Title = "Create Activity";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

@using (Html.BeginForm("Create", "Activities", new { area = GlobalConstants.AdminArea }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <div class="row container">
            <div class="col-md-4">
                @Html.EditorFor(m => m.Description)
                <div class="row">
                    @Html.LabelFor(model => model.StartDate)
                </div>

                @Html.EditorFor(m => m.StartDate)
                @Html.EditorFor(m => m.Duration)


                <div class="form-group">
                    <div>@Html.LabelFor(m => m.selectedTasks)</div>
                    @Html.ListBoxFor(m => m.selectedTasks, Model.TasksList, new { @class = "form-control chzn-select", @data_placeholder = "Choose Tasks" })
                </div>
                <div class="form-group">
                    <div>@Html.LabelFor(m => m.ClientId)</div>
                    @Html.DropDownListFor(m => m.ClientId, Model.ClientsList, new { @class = "form-control chzn-select", @data_placeholder = "Choose Client" })
                </div>
            </div>

        </div>
        <div class="row container">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Submit(new { value = "Save", @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/activate-chosen")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/activate-datetimepicker")
}
